{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["config:recommended"],

  "packageRules": [
    {
      "matchManagers": ["nix"],
      "lockFileMaintenance": {
        "enabled": true
      }
    }
  ],

  "nix": {
    "enabled": true,
    "fileMatch": [
      "(^|/)nix4dev/flake\\.nix$"
    ]
  },

  "ignorePaths": ["tests/**"]
}
